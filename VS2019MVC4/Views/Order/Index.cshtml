@model List<ASPNETWebApp45.Models.Order>
@{
    ViewBag.Title = "Manage Orders";
}

<p class="float-right">
    @Html.Partial("_Create", ViewBag.ForCreatePartial as Dictionary<string, object>)
</p>

<h2><a href="/order/seedsampledata/" class="btn btn-warning btn-sm">Seed Sample Data</a> </h2>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Order Date</th>
                <th>Order Total</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>
                        <a href="/order/get/@order.Id">
                            @order.Customer.LastName, @order.Customer.FirstName
                        </a>
                    </td>
                    <td>@order.OrderDate.ToString("dd-MMM-yyyy")</td>
                    <td>@string.Format("{0:C}", order.OrderTotal)</td>
                    <td>@order.Notes</td>
                </tr>
            }
        </tbody>
    </table>
</div>





