@model ASPNETWebApp45.Models.Product

<form action="/crudsample/Edit" method="post" enctype="multipart/form-data" class="form-horizontal">
    <div class="modal-header">
        <h5 class="modal-title">Edit Product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <!-- Text input-->
        <div class="form-group">
            <label for="Id">Id</label>
            <input id="Id" name="Id" type="text" value="@Model.Id" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label for="Name">Name</label>
            <input id="Name" name="Name" type="text" value="@Model.Name" class="form-control" required="required">
        </div>
        <div class="form-group">
            <label for="UnitPrice">Unit Price</label>
            <input id="UnitPrice" name="UnitPrice" type="text" value="@Model.UnitPrice" class="form-control" required="required">
        </div>
        <div class="form-group">
            <label for="Unit">Unit</label>
            <input id="Unit" name="Unit" type="text" value="@Model.Unit" class="form-control">
        </div>

        <!-- File Upload -->
        <div class="form-group">
            <label for="Unit">Upload Photo</label>
            <input type="file" accept="image/*" id="fileUpload" name="fileUpload" class="form-control input-md">
        </div>
        @if (!string.IsNullOrEmpty(Model.PictureFilename))
        {
            <div class="form-group">
                <img src="/uploadedimages/@Model.PictureFilename" class="img-thumbnail" alt="@Model.Name Photo">
            </div>
        }

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>


